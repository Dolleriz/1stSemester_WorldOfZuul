                              </image>
                           </ImageView>
                            <Canvas fx:id="trash" height="524.0" width="480.0" />
                        </children>
                     </AnchorPane>
                      <Button fx:id="help" layoutX="488.0" layoutY="530.0" mnemonicParsing="false" onAction="#buttonClicked" prefHeight="61.0" prefWidth="76.0" text="Hjælp" />
